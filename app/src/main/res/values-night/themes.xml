<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyFridge" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#F8F8F8</item>
        <item name="colorPrimaryVariant">#F8F8F8</item>
        <item name="colorOnPrimary">#141414</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#F8F8F8</item>
        <item name="colorSecondaryVariant">#F8F8F8</item>
        <item name="colorOnSecondary">#F8F8F8</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="ThemeOverlay.MyFridge.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_900</item>
        <item name="fullscreenTextColor">@color/light_blue_A400</item>
    </style>
</resources>