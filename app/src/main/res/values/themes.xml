<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyFridge" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#141414</item>
        <item name="colorPrimaryVariant">#141414</item>
        <item name="colorOnPrimary">#F8F8F8</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#141414</item>
        <item name="colorSecondaryVariant">#141414</item>
        <item name="colorOnSecondary">#141414</item>


        <item name="android:windowTranslucentStatus">true</item>

    </style>

    <style name="Theme.MyFridge.Fullscreen" parent="Theme.MyFridge">
        <item name="android:actionBarStyle">@style/Widget.Theme.MyFridge.ActionBar.Fullscreen</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.MyFridge.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
</resources>